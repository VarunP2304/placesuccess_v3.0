{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx", // <-- Fixes the 'Cannot use JSX' error

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Path Aliasing */
    "baseUrl": ".", // <-- Tells TS the base directory is the project root
    "paths": {
      "@/*": [
        "src/*"
      ] // <-- Fixes the 'Cannot find module' errors by defining the '@/' alias
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}